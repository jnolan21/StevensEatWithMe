<article class="landingPage">
    <div class = "landingBox">
        {{#unless isLoggedIn}}
        <p><a href="/users/signup">Signup</a></p> <!--make this hidden if theyre already logged in and give them a user profile they can click on or just disappear-->
        <p><a href="/users/login">Login</a></p>
        {{/unless}}
    </div>

</article>
<div id = "restaurants">
    <h1 class = "landingH1"> Top Dining Options </h1>


    {{#each topRestaurants}}
    <a href = "/diningList/{{this._id}}">
        <div class = "restaurant_box" >
            <img src = {{this.imageURL}} class = "restaurant_img" alt = {{this.name}} >
            <h2>{{this.name}}</h2>
    </a>    
        <ul>
            {{#each topMenuItems}}
            <li>{{name}}</li>
            {{/each}}
        </ul>
    </div>
    {{/each}}
</div>

<footer class = "landingPg">
    <p>Authors: Alexander Lupia, Andrew Staniaszek, Jack Nolan, Jenn Alexander
    </p>
</footer>
