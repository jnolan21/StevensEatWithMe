    <div class = "filter-container">
        <form class = "dropdown-form">
            <div class = "dropdown filter-group">
                <button 
                class="btn btn-default dropdown-toggle" 
                id="dietaryFilter" 
                data-toggle="dropdown" 
                aria-haspopup="true" 
                aria-expanded="false">Dietary Restrictions<span class = "caret"></span></button>
                    <ul class="dropdown-menu" id = "dietary">
                        {{!-- {{#each dietary}}
