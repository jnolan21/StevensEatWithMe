<article class="signup">
    <h1>Signup for EatWithMe!</h1>

    <form action="/users/signup" method="POST" class="signup-form" id="signup-form">
        <div class= "signupBox">
            <label>
                <span class = "inputName">First Name:</span>
                <input type="text" id="signup-firstName" name="firstName" placeholder="Enter your first name" value="{{user.firstName}}" class="signup-input">
            </label>
            <label>
                <span class = "inputName">Last Name:</span>
                <input type="text" id="signup-lastName" name="lastName" placeholder="Enter your last name" value="{{user.lastName}}" class="signup-input">
            </label>
            <label>
                <span class = "inputName">Email:</span>
                <input type="email" id="signup-email" name="email" placeholder="Enter your Stevens email" value="{{user.email}}" class="signup-input">
            </label>
            <label>
                <span class = "inputName">Username:</span>
                <input type="text" id="signup-username" name="username" placeholder="Create a username" value="{{user.username}}" class="signup-input">
            </label>
            <label>
                <span class = "inputName">Password:</span>
                <input type="password" id="signup-password" name="password" placeholder="Create a password" class="signup-input">
            </label>
            <label>
                <span class = "inputName">Confirm Password:</span>
                <input type="password" id="signup-passwordConfirm" name="passwordConfirm" placeholder="Confirm password" class="signup-input">
            </label>
            <!-- Button to signup -->
            <button type="submit" id="signup-button">Signup</button>
        </div>
        <h2>Already have an account?<a href="/users/login" class = "signupB"> Login!</a></h2> 
        
    </form>

    <ul id='signup-errors' class="error-list">
    {{#if hasErrors}}
        {{#each errors}}
        <li>
            {{this}}
        </li>
        {{/each}}
    {{/if}}
    </ul> 

</article>