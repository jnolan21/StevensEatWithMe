                                {{else}}
                                <details close>
                                {{/if}}
                                    <summary class="caret-summary">
                                        <p><span class="caret"></span> All Menu Items</p>
                                    </summary>
                                    <ul class="listSlider">
                                        {{#each this.menuItems}}
                                        <li class="sliderListItem">
                                            <div class="buttonGroup">
                                                <!-- Delete Menu Item Button -->
                                                <form action="/admin/menuItem/delete" method="POST" class="deleteMenuItemForm">
                                                    <input type="hidden" name="menuItemId" value="{{this._id}}">
                                                    <button type="submit" class="EditandDeleteButton">Delete</button>
                                                </form>
                                                <!-- Edit Menu Item Button -->
                                                <form action="/admin/menuItem/edit/{{this._id}}" method="GET" class="editMenuItemForm">
                                                    <input type="hidden" name="menuItemId" value="{{this._id}}">
                                                    <button type="submit" class="EditandDeleteButton">Edit</button>
                                                </form>
                                            </div>
                                            <div class="sliderIndividualItem">
                                                <p><span class="reviewSpan">Name:</span> {{this.name}}</p>
                                                <p><span class="reviewSpan">Description:</span> {{this.description}}</p>
                                                <p><span class="reviewSpan">Dietary Restrictions:</span> {{this.dietaryRestrictions}}</p>
                                                {{#if this.hasReviews}}
                                                <p><span class="reviewSpan">Rating:</span> {{this.rating}}/5</p>
                                                {{else}}
                                                <p><span class="reviewSpan">Rating:</span>N/A - no reviews</p>
                                                {{/if}}
                                            </div>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </details>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            </details>
        </section>
    </section>

